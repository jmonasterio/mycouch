# CouchDB Credentials (for proxy to authenticate to CouchDB)
COUCHDB_USER=admin
COUCHDB_PASSWORD=admin

# Proxy Configuration
# IP address to listen on (0.0.0.0 = all interfaces, 127.0.0.1 = localhost only)
# Listen on all interfaces so ngingx can proxy to
PROXY_HOST=0.0.0.0

# Port to run proxy on (standard CouchDB port is 5984, adjust if needed)
PROXY_PORT=5985

# Logging
LOG_LEVEL=INFO

# Tenant Configuration (for multi-tenant deployments)
# Set ENABLE_TENANT_MODE=true to enable tenant enforcement
ENABLE_TENANT_MODE=false

# JWT claim name for tenant ID (default: tenant_id)
# The proxy will extract this claim from the JWT to identify the tenant
TENANT_CLAIM=tenant_id

# Document field name for tenant ID (default: tenant_id)
# Documents will be filtered/injected with this field
TENANT_FIELD=tenant_id

